<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ContactoRepartidorActivity">

    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_margin="4dp"
            android:id="@+id/ivAtras"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_atras"/>

    </LinearLayout>

    <ScrollView
        android:layout_marginHorizontal="7dp"
        android:id="@+id/scrollChat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/chat"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:paddingHorizontal="5dp"
            android:paddingVertical="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_marginHorizontal="10dp"
        android:elevation="4dp">

        <EditText
            android:id="@+id/etMensaje"
            android:hint="Escribele al repartidor..."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#E0E0E0"
            android:padding="8dp"
            android:elevation="5dp"/>

        <ImageView
            android:id="@+id/ivEnviar"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/azul2"
            android:layout_marginStart="5dp"
            android:background="@drawable/ic_enviar"/>

    </LinearLayout>

</LinearLayout>