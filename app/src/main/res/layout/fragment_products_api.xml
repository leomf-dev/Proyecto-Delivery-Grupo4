<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".Fragment.Inicio_MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="6dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:padding="8dp">

            <!-- TÃ­tulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CategorÃ­a Comida FIREBASE"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginEnd="10dp" />

            <!-- Imagen -->
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_chef"
                android:contentDescription="Icono de comida"
                android:adjustViewBounds="true" />
        </LinearLayout>

        <!-- BOTÃ“N PARA IR AL FORMULARIO DE ENTREGA -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIrFormulario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ›ï¸ actualiza tu metodo de pago y direccion"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"/>

        <!-- CONTENEDOR DE BÃšSQUEDA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:padding="8dp">

            <!-- ICONO DE FILTRO -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_filtro"
                android:layout_marginEnd="8dp"
                android:contentDescription="Filtrar"
                android:padding="5dp" />

            <!-- CAMPO DE BÃšSQUEDA -->
            <EditText
                android:id="@+id/buscar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Que pediras hoy ðŸ˜‰?"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:padding="10dp"
                android:textSize="16sp"
                android:layout_margin="5dp" />
        </LinearLayout>

        <!-- SCROLL HORIZONTAL DE CATEGORÃAS -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/contenedorCategorias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp">

                <!-- CATEGORÃA 1 -->
                <LinearLayout
                    android:id="@+id/layoutCategoria1"
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/ic_hamburguesa"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hamburguesas"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <!-- CATEGORÃA 2 -->
                <LinearLayout
                    android:id="@+id/layoutCategoria2"
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/ic_pastel"
                        android:scaleType="centerCrop"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Postres"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <!-- CATEGORÃA 3 -->
                <LinearLayout
                    android:id="@+id/layoutCategoria3"
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/ic_pizza"
                        android:scaleType="centerCrop"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pizza"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <!-- CATEGORÃA 4 -->
                <LinearLayout
                    android:id="@+id/layoutCategoria4"
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/ic_salad"
                        android:scaleType="centerCrop"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saludable"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <!-- CATEGORÃA 5 -->
                <LinearLayout
                    android:id="@+id/layoutCategoria5"
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/ic_bebidas"
                        android:scaleType="centerCrop"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bebidas"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
        <!-- FIN SCROLL HORIZONTAL -->

        <!--CON FIREBASE-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvProductsApi"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</FrameLayout>