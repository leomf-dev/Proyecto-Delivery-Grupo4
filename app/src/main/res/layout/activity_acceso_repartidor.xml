<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_morado_gradiente"
    tools:context=".ui.AccesoRepartidorActivity">

    <!-- ðŸ”¹ ScrollView envuelve solo el formulario -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="40dp"
            android:paddingHorizontal="32dp">

            <!-- ðŸ”¹ Logo superior -->
            <ImageView
                android:id="@+id/icLogo"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_logo_letra" />

            <!-- ðŸ”¹ AnimaciÃ³n moto -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieMoto"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                app:lottie_rawRes="@raw/delivery_moto"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <!-- ðŸ”¹ TÃ­tulo -->
            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Acceso Repartidor"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- ðŸ”¹ Campo correo -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCorreoRepartidor"
                style="@style/Widget.Material3.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="Correo electrÃ³nico"
                app:startIconDrawable="@drawable/ic_correo_small"
                app:startIconTint="@color/moradoOscuro"
                app:boxBackgroundColor="@android:color/white"
                app:boxStrokeColor="@color/moradoOscuro"
                app:boxStrokeWidth="2dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietCorreoRepartidor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="@android:color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- ðŸ”’ Campo contraseÃ±a -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilClaveRepartidor"
                style="@style/Widget.Material3.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="ContraseÃ±a"
                app:startIconDrawable="@drawable/ic_candado_small"
                app:startIconTint="@color/moradoOscuro"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/moradoOscuro"
                app:boxBackgroundColor="@android:color/white"
                app:boxStrokeColor="@color/moradoOscuro"
                app:boxStrokeWidth="2dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietClaveRepartidor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@android:color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- ðŸŸ£ BotÃ³n iniciar sesiÃ³n -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIniciarRepartidor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:paddingVertical="14dp"
                android:text="Iniciar sesiÃ³n"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/moradoOscuro"
                app:icon="@drawable/ic_login"
                app:iconTint="@android:color/white"
                app:iconPadding="8dp" />

            <!-- âšª BotÃ³n registrarse -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegistroRepartidor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingVertical="14dp"
                android:text="Registrarme como repartidor"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                app:backgroundTint="#8E24AA"
                app:icon="@drawable/ic_user_add"
                app:iconTint="@android:color/white"
                app:iconPadding="8dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
