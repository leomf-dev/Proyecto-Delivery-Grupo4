<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RutaEntregaActivity">

    <!-- ðŸ—ºï¸ Mapa -->
    <fragment
        android:id="@+id/mapRuta"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnEntregado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="FragmentTagUsage" />

    <!-- âœ… BotÃ³n para marcar entrega -->
    <Button
        android:id="@+id/btnEntregado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Marcar pedido como entregado âœ…"
        android:backgroundTint="@color/morado"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
