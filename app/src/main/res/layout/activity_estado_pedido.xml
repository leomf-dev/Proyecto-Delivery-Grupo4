<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ActivityEstadoPedido"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- ðŸ”¹ Info del pedido y repartidor -->
        <TextView
            android:id="@+id/tvInfoRepartidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cargando pedido..."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:padding="8dp"
            android:layout_marginBottom="12dp" />

        <!-- ðŸ”¹ Mapa estÃ¡tico -->
        <ImageView
            android:id="@+id/mapaEstatico"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/mapa_ejemplo"
            android:scaleType="centerCrop"
            android:layout_marginBottom="20dp" />

        <!-- ðŸ”¹ Botones -->
        <Button
            android:id="@+id/btnVerMiPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver mi pedido ðŸ—ºï¸"
            android:backgroundTint="@color/morado"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnContactarRepartidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contactar Repartidor"
            android:backgroundTint="@color/naranja"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnSoporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contactar Soporte"
            android:backgroundTint="@color/naranja"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

        <!-- ðŸ”¹ Lista de pedidos -->
        <TextView
            android:text="Mis pedidos:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPedidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp" />

    </LinearLayout>
</ScrollView>
