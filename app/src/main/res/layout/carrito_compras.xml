<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


       <!--Imagen del producto seleccionado-->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgPCar"
            android:src="@mipmap/ic_producto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedImage"/>


        <!--Nombre del producto -->
        <TextView
            android:id="@+id/nombrePCar"
            android:text="Nombre de producto"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imgPCar"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--Descripcion del producto -->
        <TextView
            android:id="@+id/descripcionPCar"
            android:text="Descripcion"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/nombrePCar"
            android:layout_marginTop="5dp"
            tools:text="@tools:sample/lorem[15]"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

<!--  Precio producto-->
        <TextView
            android:id="@+id/precioPCar"
            android:text="0.0"
            android:padding="10dp"
            android:textAlignment="textStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

     <!-- Precio Final-->
        <TextView
            android:id="@+id/prefinalPCar"
            android:text="0.0"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            android:textAlignment="textStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>






    </RelativeLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

<!-- Disminuir producto -->
        <ImageButton
            android:id="@+id/btnDismi"
            android:src="@drawable/ic_remove"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <!--Cantidad de producto -->
        <TextView
            android:id="@+id/cantidadPCar"
            android:text="1"
            android:padding="6dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--Aumentar producto -->
        <ImageButton
            android:id="@+id/btnAum"
            android:src="@drawable/ic_add"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


     </androidx.appcompat.widget.LinearLayoutCompat>
    
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAgregarCarrito"
        android:text="Agregar al carrito"
        android:padding="5dp"
        app:cornerRadius="0dp"
        android:layout_marginTop="10dp"
        android:textAllCaps="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</androidx.appcompat.widget.LinearLayoutCompat>