<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.AccesoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/acceso">

        <!-- Logo -->
        <ImageView
            android:id="@+id/icLetra_app"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_logo_letra"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Icono de atrás (ic_arrow_back) -->
        <ImageView
            android:id="@+id/btnRegresar"
            android:layout_width="38dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Volver"
            app:layout_constraintTop_toTopOf="@id/icLetra_app"
            app:layout_constraintBottom_toBottomOf="@id/icLetra_app"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Animación Lottie -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimacion"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="130dp"
            app:lottie_rawRes="@raw/login"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:layout_constraintTop_toBottomOf="@id/icLetra_app"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Formulario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="32dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/lottieAnimacion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Campo Correo -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCorreologin"
                style="@style/Widget.Material3.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo"
                android:textColorHint="@color/morado"
                app:boxBackgroundColor="@android:color/white"
                app:boxStrokeWidth="1dp"
                app:boxStrokeColor="@color/morado"
                app:boxCornerRadiusBottomEnd="0dp"
                app:boxCornerRadiusBottomStart="0dp"
                app:boxCornerRadiusTopEnd="0dp"
                app:boxCornerRadiusTopStart="0dp"
                app:startIconDrawable="@drawable/ic_correo_small"
                app:startIconTint="@color/morado">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietCorreologin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo Contraseña -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilClavelogin"
                style="@style/Widget.Material3.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Contraseña"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="@android:color/white"
                app:boxStrokeWidth="1dp"
                app:boxStrokeColor="@color/black"
                app:boxCornerRadiusBottomEnd="0dp"
                app:boxCornerRadiusBottomStart="0dp"
                app:boxCornerRadiusTopEnd="0dp"
                app:boxCornerRadiusTopStart="0dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/morado"
                app:startIconDrawable="@drawable/ic_candado_small"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietClavelogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botón Iniciar Sesión -->
            <Button
                android:id="@+id/btnIniciarSesion"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/morado"
                android:layout_marginTop="32dp"
                android:text="Iniciar Sesion"
                android:textSize="17sp"
                android:paddingVertical="13dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:cornerRadius="12dp" />

            <TextView
                android:id="@+id/tvAccesoRepartidor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Eres repartidor? Inicia sesión aquí"
                android:textColor="@color/morado"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="¿No tienes cuenta aún? Registrate"
                android:textAlignment="center"
                android:textColor="@color/white_70"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent" />

            <Button
                android:id="@+id/btnRegistrarse"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:text="Registrarse"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>