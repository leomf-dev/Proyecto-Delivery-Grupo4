<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/semi_negro"
    tools:context=".AccesoActivity">


    <!-- Logo de la app -->
    <ImageView
        android:id="@+id/icLetra_app"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:src="@drawable/letra_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <!-- Carrusel de imágenes con bordes difuminados -->
    <FrameLayout
        android:id="@+id/frCarrusel"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icLetra_app">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vpCarrusel"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Degradado superior (se funde con el fondo negro) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@drawable/fade_top"
            android:layout_gravity="top" />

        <!-- Degradado inferior -->
        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@drawable/fade_bottom"
            android:layout_gravity="bottom" />
    </FrameLayout>


    <!-- Texto de instrucciones -->
    <TextView
        android:id="@+id/tvTitulo1"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:text="Busca tu comida favorita cerca de ti"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/frCarrusel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ScrollView para contener los campos -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

    <!-- Correo -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tietCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Contraseña -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilClave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contraseña"
        android:layout_marginTop="16dp"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tietClave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

        <!-- Botón de inicio -->
        <Button
            android:id="@+id/btnInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar sesión"
            android:layout_marginTop="16dp"/>

        <!-- Registro -->
        <Button
            android:id="@+id/btnRegistro"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:text="Registro"
            android:backgroundTint="@color/amarillo"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>