<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.Categorias_Activity">

    <!-- ðŸ§© CONTENIDO PRINCIPAL SCROLLEABLE -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TÃTULO PRINCIPAL -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CategorÃ­a Comida"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <!-- SUBTÃTULO -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â¿QuÃ© pedirÃ¡s hoy ðŸ˜‰?"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <!-- SCROLL HORIZONTAL DE CATEGORÃAS -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:id="@+id/contenedorCategorias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp">

                    <!-- CATEGORÃA 1 -->
                    <LinearLayout
                        android:id="@+id/layoutCategoria1"
                        android:layout_width="127dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="8dp"
                        android:layout_marginEnd="12dp">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@mipmap/ic_hamburguesa"
                            android:scaleType="centerCrop" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hamburguesas"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginTop="10dp" />
                    </LinearLayout>

                    <!-- CATEGORÃA 2 -->
                    <LinearLayout
                        android:id="@+id/layoutCategoria2"
                        android:layout_width="127dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="8dp"
                        android:layout_marginEnd="12dp">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@mipmap/ic_pastel"
                            android:scaleType="centerCrop" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Postres"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginTop="10dp" />
                    </LinearLayout>

                    <!-- CATEGORÃA 3 -->
                    <LinearLayout
                        android:id="@+id/layoutCategoria3"
                        android:layout_width="127dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="8dp"
                        android:layout_marginEnd="12dp">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@mipmap/ic_pizza"
                            android:scaleType="centerCrop" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pizza"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginTop="10dp" />
                    </LinearLayout>

                    <!-- CATEGORÃA 4 -->
                    <LinearLayout
                        android:id="@+id/layoutCategoria4"
                        android:layout_width="127dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="8dp"
                        android:layout_marginEnd="12dp">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@mipmap/ic_sopas"
                            android:scaleType="centerCrop" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Saludable"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginTop="10dp" />
                    </LinearLayout>

                    <!-- CATEGORÃA 5 -->
                    <LinearLayout
                        android:id="@+id/layoutCategoria5"
                        android:layout_width="127dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="8dp"
                        android:layout_marginEnd="12dp">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@mipmap/ic_bebidas"
                            android:scaleType="centerCrop" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bebidas"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginTop="10dp" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- LISTA DE PRODUCTOS -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHistorial"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

    <!-- ðŸ”˜ BOTÃ“N FLOTANTE -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAgregarDireccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        app:backgroundTint="@color/gris"
        app:tint="@android:color/white"
        app:srcCompat="@drawable/ic_comprar"
        android:contentDescription="Agregar direcciÃ³n"/>
</FrameLayout>
