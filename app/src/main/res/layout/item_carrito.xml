<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="17dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
       >

        <ImageView
            android:id="@+id/imgProducto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_producto_foreground"
            android:layout_marginEnd="12dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombreProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hamburguesa ClÃ¡sica"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tvPrecioProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/ 15.00"
                android:textColor="#555"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvSubtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtotal: S/ 15.00"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="14dp" />
        </LinearLayout>

        <!-- Controles de cantidad -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingHorizontal="4dp">

            <ImageButton
                android:id="@+id/btnAumentar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:backgroundTint="#FF6F61"
                android:background="@drawable/bg_round_button"
                android:src="@drawable/ic_add"
                android:contentDescription="Aumentar" />

            <TextView
                android:id="@+id/tvCantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="16sp"
                android:gravity="center"
                android:paddingVertical="4dp" />

            <ImageButton
                android:id="@+id/btnDisminuir"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:backgroundTint="#FF6F61"
                android:background="@drawable/bg_round_button"
                android:src="@drawable/ic_remove"
                android:contentDescription="Disminuir" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
